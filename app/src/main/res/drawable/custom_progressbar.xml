<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 进度条背景 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/home_background"
                android:endColor="@color/home_background"
                android:startColor="@color/home_background" />
        </shape>
    </item>

    <!-- 蓝色的进度值 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="3dp" />
                <gradient
                    android:centerColor="@color/home_orange"
                    android:endColor="@color/home_orange"
                    android:startColor="@color/home_orange" />
            </shape>
        </clip>
    </item>

</layer-list>